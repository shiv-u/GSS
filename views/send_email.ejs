<% include ../partials/header.ejs %>
<div class="container-fluid" style="max-width:450px">
    
        <form action="/send_emails/<%= strength %>/<%= threshold %>" method="POST">
        <h1 style="text-align:center">Send Connect Request To Your Friends</h1>
        <label>Note: Please do enter your email id also </label>
         <div style="margin: 20px auto">
             <% for(var i=1;i<parseInt(strength)+1;i++) { %>
             <div class="form-group">
                <input type="text" class="form-control" name="email[<%= i %>]" placeholder="Email-ID"   required>
          </div>
             <% } %>
          
            
           <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">Submit</button>
           </div>
         
        </div>
        </form>
    
</div>




